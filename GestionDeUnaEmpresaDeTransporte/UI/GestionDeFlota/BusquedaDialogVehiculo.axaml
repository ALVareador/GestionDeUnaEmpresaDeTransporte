<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="600" Height="400"
        MinWidth="600" MinHeight="400"
        MaxWidth="1200" MaxHeight="800"
        x:Class="GestionDeUnaEmpresaDeTransporte.UI.GestionDeFlota.BusquedaDialogVehiculo"
        Title="Busqueda de un vehiculo">
    <StackPanel
        Orientation="Vertical"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Margin="5">
        
        <ComboBox SelectedIndex="0"
                  Margin="5"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Center"
                  Name="valorBusqueda">
            <ComboBoxItem Content="Matricula" />
            <ComboBoxItem Content="Marca" />
            <ComboBoxItem Content="Modelo" />
            <ComboBoxItem Content="Consumo Km" />
        </ComboBox>
        <DockPanel Margin="5">
            <Label Content="ValorBusqueda" DockPanel.Dock="Left" />
            <TextBox Name="EdBusqueda" />
        </DockPanel>
        
        <DockPanel
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom">
            
            <StackPanel
                Orientation="Horizontal"
                DockPanel.Dock="Right"
                HorizontalAlignment="Right"
                Margin="5">
                
                <Button
                    Name="BtCancel"
                    Margin="5"
                    Content="Cancelar" />
            
                <Button
                    Name="BtOk"
                    Margin="5"
                    Content="Ok" />
            </StackPanel>
        </DockPanel>
    </StackPanel>
</Window>